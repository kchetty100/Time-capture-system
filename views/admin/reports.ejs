<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <header class="header">
        <div class="container">
            <div class="header-content">
                <div class="logo">
                    <h1><span class="logo-re">re</span><span class="logo-v">v</span><span class="logo-erside">erside</span><span class="logo-asterisk">*</span></h1>
                    <p class="tagline">You are with good company</p>
                </div>
                <nav class="nav">
                    <% if (typeof user !== 'undefined' && user) { %>
                        <div class="user-info">
                            <span class="user-name">Welcome, <%= user.name %></span>
                            <div class="user-role"><%= user.role.charAt(0).toUpperCase() + user.role.slice(1) %></div>
                        </div>
                        <div class="nav-links">
                            <a href="/admin" class="nav-link <%= typeof currentPage !== 'undefined' && currentPage === 'dashboard' ? 'active' : '' %>">
                                <i class="fas fa-tachometer-alt"></i> Dashboard
                            </a>
                            <a href="/admin/timesheets/pending" class="nav-link <%= typeof currentPage !== 'undefined' && currentPage === 'pending' ? 'active' : '' %>">
                                <i class="fas fa-clock"></i> Pending
                            </a>
                            <a href="/admin/timesheets" class="nav-link <%= typeof currentPage !== 'undefined' && currentPage === 'timesheets' ? 'active' : '' %>">
                                <i class="fas fa-file-alt"></i> All Timesheets
                            </a>
                            <a href="/admin/employees" class="nav-link <%= typeof currentPage !== 'undefined' && currentPage === 'employees' ? 'active' : '' %>">
                                <i class="fas fa-users"></i> Employees
                            </a>
                            <a href="/admin/reports" class="nav-link <%= typeof currentPage !== 'undefined' && currentPage === 'reports' ? 'active' : '' %>">
                                <i class="fas fa-chart-bar"></i> Reports
                            </a>
                        </div>
                        <form action="/auth/logout" method="POST" class="logout-form">
                            <button type="submit" class="btn btn-outline">
                                <i class="fas fa-sign-out-alt"></i> Logout
                            </button>
                        </form>
                    <% } %>
                </nav>
            </div>
        </div>
    </header>

    <main class="main">
        <div class="container">
            <% if (typeof success !== 'undefined' && success) { %>
                <div class="alert alert-success">
                    <i class="fas fa-check-circle"></i>
                    <%= success %>
                </div>
            <% } %>
            
            <% if (typeof error !== 'undefined' && error) { %>
                <div class="alert alert-error">
                    <i class="fas fa-exclamation-circle"></i>
                    <%= error %>
                </div>
            <% } %>

            <div class="reports-page">
                <div class="page-header">
                    <h1>Admin Reports</h1>
                    <p>Comprehensive analytics and insights for time tracking management</p>
                </div>

                <!-- Date Range Filter -->
                <div class="filter-section">
                    <form method="GET" class="date-filter-form">
                        <div class="form-group">
                            <label for="start_date">Start Date:</label>
                            <input type="date" id="start_date" name="start_date" value="<%= startDate %>" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="end_date">End Date:</label>
                            <input type="date" id="end_date" name="end_date" value="<%= endDate %>" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-filter"></i> Apply Filter
                        </button>
                    </form>
                </div>

                <!-- Overall Statistics -->
                <div class="stats-section">
                    <h2>Overall Statistics</h2>
                    <% if (stats) { %>
                        <div class="stats-grid">
                            <div class="stat-card">
                                <div class="stat-icon">
                                    <i class="fas fa-file-alt"></i>
                                </div>
                                <div class="stat-content">
                                    <h3><%= stats.totalTimesheets || 0 %></h3>
                                    <p>Total Timesheets</p>
                                </div>
                            </div>
                            <div class="stat-card">
                                <div class="stat-icon">
                                    <i class="fas fa-check-circle"></i>
                                </div>
                                <div class="stat-content">
                                    <h3><%= stats.approvedTimesheets || 0 %></h3>
                                    <p>Approved</p>
                                </div>
                            </div>
                            <div class="stat-card">
                                <div class="stat-icon">
                                    <i class="fas fa-clock"></i>
                                </div>
                                <div class="stat-content">
                                    <h3><%= stats.pendingTimesheets || 0 %></h3>
                                    <p>Pending</p>
                                </div>
                            </div>
                            <div class="stat-card">
                                <div class="stat-icon">
                                    <i class="fas fa-times-circle"></i>
                                </div>
                                <div class="stat-content">
                                    <h3><%= stats.rejectedTimesheets || 0 %></h3>
                                    <p>Rejected</p>
                                </div>
                            </div>
                            <div class="stat-card">
                                <div class="stat-icon">
                                    <i class="fas fa-users"></i>
                                </div>
                                <div class="stat-content">
                                    <h3><%= stats.totalEmployees || 0 %></h3>
                                    <p>Total Employees</p>
                                </div>
                            </div>
                            <div class="stat-card">
                                <div class="stat-icon">
                                    <i class="fas fa-clock"></i>
                                </div>
                                <div class="stat-content">
                                    <h3><%= (stats.totalHours || 0).toFixed(1) %></h3>
                                    <p>Total Hours</p>
                                </div>
                            </div>
                        </div>
                    <% } else { %>
                        <div class="empty-state">
                            <i class="fas fa-chart-bar"></i>
                            <h3>No Statistics Available</h3>
                            <p>Unable to load statistics data.</p>
                        </div>
                    <% } %>
                </div>

                <!-- Weekly Statistics -->
                <div class="weekly-section">
                    <h2>Weekly Statistics</h2>
                    <% if (weeklyStats && weeklyStats.length > 0) { %>
                        <div class="weekly-stats-container">
                            <% weeklyStats.forEach(week => { %>
                                <div class="week-card">
                                    <div class="week-header">
                                        <h3>Week of <%= new Date(week.week_ending).toLocaleDateString() %></h3>
                                        <span class="week-hours"><%= week.total_hours || 0 %>h</span>
                                    </div>
                                    <div class="week-details">
                                        <div class="week-stat">
                                            <span class="week-label">Timesheets:</span>
                                            <span class="week-value"><%= week.timesheet_count || 0 %></span>
                                        </div>
                                        <div class="week-stat">
                                            <span class="week-label">Employees:</span>
                                            <span class="week-value"><%= week.employee_count || 0 %></span>
                                        </div>
                                        <div class="week-stat">
                                            <span class="week-label">Avg Hours/Employee:</span>
                                            <span class="week-value"><%= week.employee_count > 0 ? (week.total_hours / week.employee_count).toFixed(1) : 0 %></span>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                    <% } else { %>
                        <div class="empty-state">
                            <i class="fas fa-calendar-week"></i>
                            <h3>No Weekly Data</h3>
                            <p>No weekly statistics available for the selected period.</p>
                        </div>
                    <% } %>
                </div>

                <!-- Approval Rate Chart -->
                <div class="approval-section">
                    <h2>Approval Rate Analysis</h2>
                    <% if (stats) { %>
                        <div class="approval-chart">
                            <div class="approval-item">
                                <div class="approval-label">Approved</div>
                                <div class="approval-bar">
                                    <div class="approval-fill approved" style="width: <%= stats.totalTimesheets > 0 ? (stats.approvedTimesheets / stats.totalTimesheets) * 100 : 0 %>%"></div>
                                </div>
                                <div class="approval-percentage"><%= stats.totalTimesheets > 0 ? ((stats.approvedTimesheets / stats.totalTimesheets) * 100).toFixed(1) : 0 %>%</div>
                            </div>
                            <div class="approval-item">
                                <div class="approval-label">Pending</div>
                                <div class="approval-bar">
                                    <div class="approval-fill pending" style="width: <%= stats.totalTimesheets > 0 ? (stats.pendingTimesheets / stats.totalTimesheets) * 100 : 0 %>%"></div>
                                </div>
                                <div class="approval-percentage"><%= stats.totalTimesheets > 0 ? ((stats.pendingTimesheets / stats.totalTimesheets) * 100).toFixed(1) : 0 %>%</div>
                            </div>
                            <div class="approval-item">
                                <div class="approval-label">Rejected</div>
                                <div class="approval-bar">
                                    <div class="approval-fill rejected" style="width: <%= stats.totalTimesheets > 0 ? (stats.rejectedTimesheets / stats.totalTimesheets) * 100 : 0 %>%"></div>
                                </div>
                                <div class="approval-percentage"><%= stats.totalTimesheets > 0 ? ((stats.rejectedTimesheets / stats.totalTimesheets) * 100).toFixed(1) : 0 %>%</div>
                            </div>
                        </div>
                    <% } else { %>
                        <div class="empty-state">
                            <i class="fas fa-chart-pie"></i>
                            <h3>No Approval Data</h3>
                            <p>Unable to load approval rate data.</p>
                        </div>
                    <% } %>
                </div>

                <!-- Quick Actions -->
                <div class="actions-section">
                    <h2>Quick Actions</h2>
                    <div class="action-buttons">
                        <a href="/admin/timesheets/pending" class="btn btn-primary">
                            <i class="fas fa-clock"></i> Review Pending Timesheets
                        </a>
                        <a href="/admin/employees" class="btn btn-secondary">
                            <i class="fas fa-users"></i> Manage Employees
                        </a>
                        <a href="/admin/timesheets" class="btn btn-outline">
                            <i class="fas fa-file-alt"></i> View All Timesheets
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <footer class="footer">
        <div class="container">
            <p>&copy; 2024 REVERSIDE CONSULTING. All rights reserved.</p>
        </div>
    </footer>

    <script src="/js/app.js"></script>

    <style>
        .reports-page {
            max-width: 1200px;
            margin: 0 auto;
        }

        .page-header {
            text-align: center;
            margin-bottom: 2rem;
        }

        .page-header h1 {
            color: var(--primary-blue);
            margin-bottom: 0.5rem;
        }

        .page-header p {
            color: var(--medium-gray);
            font-size: 1.1rem;
        }

        .filter-section {
            background: var(--white);
            padding: 1.5rem;
            border-radius: var(--border-radius);
            box-shadow: var(--shadow);
            margin-bottom: 2rem;
        }

        .date-filter-form {
            display: flex;
            gap: 1rem;
            align-items: end;
            flex-wrap: wrap;
        }

        .date-filter-form .form-group {
            flex: 1;
            min-width: 150px;
        }

        .stats-section, .weekly-section, .approval-section, .actions-section {
            background: var(--white);
            padding: 1.5rem;
            border-radius: var(--border-radius);
            box-shadow: var(--shadow);
            margin-bottom: 2rem;
        }

        .stats-section h2, .weekly-section h2, .approval-section h2, .actions-section h2 {
            color: var(--primary-blue);
            margin-bottom: 1.5rem;
            border-bottom: 2px solid var(--light-gray);
            padding-bottom: 0.5rem;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1.5rem;
        }

        .stat-card {
            display: flex;
            align-items: center;
            gap: 1rem;
            padding: 1.5rem;
            background: var(--light-gray);
            border-radius: var(--border-radius);
            border-left: 4px solid var(--primary-blue);
        }

        .stat-icon {
            width: 50px;
            height: 50px;
            background: var(--primary-blue);
            color: var(--white);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
        }

        .stat-content h3 {
            color: var(--primary-blue);
            font-size: 2rem;
            margin: 0;
        }

        .stat-content p {
            color: var(--medium-gray);
            margin: 0;
            font-size: 0.9rem;
        }

        .weekly-stats-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 1.5rem;
        }

        .week-card {
            background: var(--light-gray);
            padding: 1.5rem;
            border-radius: var(--border-radius);
            border-left: 4px solid var(--accent-blue);
        }

        .week-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1rem;
        }

        .week-header h3 {
            color: var(--dark-gray);
            margin: 0;
            font-size: 1.1rem;
        }

        .week-hours {
            background: var(--accent-blue);
            color: var(--white);
            padding: 0.25rem 0.75rem;
            border-radius: var(--border-radius);
            font-weight: 600;
        }

        .week-details {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
        }

        .week-stat {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .week-label {
            color: var(--medium-gray);
            font-size: 0.9rem;
        }

        .week-value {
            color: var(--dark-gray);
            font-weight: 600;
        }

        .approval-chart {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .approval-item {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .approval-label {
            min-width: 80px;
            font-weight: 600;
            color: var(--dark-gray);
        }

        .approval-bar {
            flex: 1;
            height: 20px;
            background: var(--light-gray);
            border-radius: 10px;
            overflow: hidden;
        }

        .approval-fill {
            height: 100%;
            border-radius: 10px;
            transition: width 0.3s ease;
        }

        .approval-fill.approved {
            background: linear-gradient(90deg, #28a745, #20c997);
        }

        .approval-fill.pending {
            background: linear-gradient(90deg, #ffc107, #fd7e14);
        }

        .approval-fill.rejected {
            background: linear-gradient(90deg, #dc3545, #e83e8c);
        }

        .approval-percentage {
            min-width: 50px;
            text-align: right;
            font-weight: 600;
            color: var(--primary-blue);
        }

        .action-buttons {
            display: flex;
            gap: 1rem;
            flex-wrap: wrap;
        }

        .action-buttons .btn {
            flex: 1;
            min-width: 200px;
            text-align: center;
        }

        .empty-state {
            text-align: center;
            padding: 3rem 1rem;
            color: var(--medium-gray);
        }

        .empty-state i {
            font-size: 3rem;
            margin-bottom: 1rem;
            color: var(--border-color);
        }

        .empty-state h3 {
            color: var(--dark-gray);
            margin-bottom: 0.5rem;
        }

        @media (max-width: 768px) {
            .date-filter-form {
                flex-direction: column;
                align-items: stretch;
            }

            .stats-grid, .weekly-stats-container {
                grid-template-columns: 1fr;
            }

            .action-buttons {
                flex-direction: column;
            }

            .action-buttons .btn {
                min-width: auto;
            }

            .approval-item {
                flex-direction: column;
                align-items: stretch;
                gap: 0.5rem;
            }

            .approval-label {
                min-width: auto;
            }

            .approval-percentage {
                text-align: left;
            }
        }
    </style>
</body>
</html>
