{
  "name": "reverside-time-tracker",
  "version": "1.0.1",
  "description": "Modular web application for IT consultants to log weekly work hours",
  "main": "server.js",
  "scripts": {
    "start": "node scripts/startup.js && node server.js",
    "start:prod": "NODE_ENV=production node scripts/startup.js && node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "migrate": "node scripts/migrate-sqlite.js",
    "setup": "npm install && npm run migrate",
    "postinstall": "echo 'Run npm run setup to initialize the database'"
  },
  "keywords": [
    "time-tracking",
    "consulting",
    "timesheet",
    "modular"
  ],
  "author": "REVERSIDE CONSULTING",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "connect-pg-simple": "^9.0.1",
    "connect-sqlite3": "^0.9.16",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "moment": "^2.29.4",
    "pg": "^8.11.3",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
